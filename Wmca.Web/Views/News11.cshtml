@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.NewsCia>
@using ContentModels = Wmca.Models.Content;
@{
	Layout = "ChangeIntoAction.cshtml";
    var searchQuery = Context.Request.Query["q"];
}

@await Html.PartialAsync("frontend/components/shared/breadcrumb")
@await Html.PartialAsync("frontend/components/shared/banner")
<main id="ds-main-content" class="ds-container">
    <h1 class="ds-col-2-3">@Model.Value("alternativeTitle", fallback: Fallback.ToDefaultValue, defaultValue: @Model.Name)</h1>

    @* Render the block areas *@
    @await Html.GetBlockGridHtmlAsync(Model, "grid")
</main>